<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kang.cdg_app.sign_in"
    tools:showIn="@layout/activity_sign_in">

    <TextView
        android:id="@+id/l_ac_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Account :"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/l_pw_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/l_ac_txt"
        android:text="Password :"
        android:textSize="30dp" />

    <Button
        android:id="@+id/log_btn"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_below="@+id/l_pw_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:onClick="um_click"
        android:text="로그인"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/l_ac_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/l_ac_txt"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/l_pw_txt"
        android:layout_toRightOf="@+id/l_pw_txt" />

    <EditText
        android:id="@+id/l_pw_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/l_ac_edit"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/l_ac_edit"
        android:layout_below="@+id/l_ac_txt"
        android:ems="10"
        android:inputType="textPassword" />
</RelativeLayout>
